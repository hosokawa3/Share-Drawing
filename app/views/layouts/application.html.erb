<!DOCTYPE html>
<html>
  <head>
    <title>ShareDrawing</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to root_path do %>
          <div class="navbar-brand"><%= image_tag('header_logo.png') %></div>
          <% end %>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if end_user_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", profile_path(current_end_user.id), class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規投稿", new_post_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "作品一覧", posts_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_end_users_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "作品一覧", admin_posts_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "About", about_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "作品一覧", posts_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_end_user_registration_path, class: 'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_end_user_session_path, class: 'nav-link text-dark' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
      <main>
        <%= yield %>
      </main>
      <footer></footer>
  </body>
</html>
