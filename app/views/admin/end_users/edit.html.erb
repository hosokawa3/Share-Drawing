<div class="container">
    <h4 class="my-3"><%= image_tag @end_user.get_profile_image(80, 80) %><%= @end_user.name %>さんのプロフィール編集</h4>
    <%= form_with model: @end_user, url: admin_end_user_path(@end_user) do |f| %>
    <div class="row">
      <div class="col-4">
        <p>ID</p>
      </div>
      <div class="col-4">
        <%= @end_user.id %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.label :neme, "ユーザーネーム" %>
      </div>
      <div class="col-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.label :introduction, "自己紹介文" %>
      </div>
      <div class="col-4">
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.label :is_active, "ステータス" %>
      </div>
      <div class="col-4">
        <%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %>
        <%= f.radio_button :is_active, false %><%= f.label :is_active, "退会", class: "text-invalid" %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4"><%= f.submit "保存する", class: "btn btn-success" %></div>
      <div class="col-4"></div>
    </div>
    <% end %>
</div>