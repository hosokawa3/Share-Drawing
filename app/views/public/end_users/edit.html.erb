<div class="container">
  <div class="row">
    <h3>プロフィール編集</h3>
    <div class="mx-auto">

      <%= form_with model:@end_user, url: update_information_path do |f| %>
      <div class="form-group row">
        <%= f.label :profile_image, 'アイコン画像', class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-8">
          <%= f.file_field :profile_image, accept: "image/*", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :name, 'ユーザーネーム', class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-8">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :introduction, '自己紹介', class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-8">
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit '変更を保存', class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
     </div>
  </div>
</div>