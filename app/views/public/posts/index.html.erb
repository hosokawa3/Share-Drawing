<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h3>作品一覧</h3>
    </div>
    <div class="col-md-6">
      <% @tags.each do |tag| %>
        <i class="fa-solid fa-tags" style="color: #4a3f3f;"></i>
        <%= link_to tag.tag_name, search_tag_path(tag_id: tag.id) %>
        <%= "(#{tag.posts.count})" %>
      <% end %>
    </div>
    <div class="col-md-3 my-2">
      <%= render 'search', q: @q, url: posts_path %>
    </div>
  </div>
  <div class="row">
    <%= render 'list', posts: @posts %>
  </div>
  <%= paginate @posts %>
</div>