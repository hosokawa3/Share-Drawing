<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6 my-1">
      <%= image_tag @post.get_image(500, 500) %>

      <% if @post.favorited_by?(current_end_user) %>
      <p class="text-right">
        <%= link_to post_favorite_path(@post), method: :delete do %>
          ♥︎<%= @post.favorites.count %>いいね
        <% end %>
      </p>
      <% else %>
      <p class="text-right">
        <%= link_to post_favorite_path(@post), method: :post do %>
          ♡<%= @post.favorites.count %>いいね
        <% end %>
      </p>
      <% end %>

    </div>
    <div class="col-md-4">
      <h2 class="my-5"><%= @post.title %></h2>
      <P><%= @post.caption %></P>
      <P>
        <%= link_to profile_path(@post.end_user.id) do %>
        <%= image_tag @post.end_user.get_profile_image(100, 100) %>
        <%= @post.end_user.name %>
        <% end %>
      </p>
      <% if @post.end_user == current_end_user %>
      <%= link_to "作品を編集する", edit_post_path(@post.id), class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
