 <% post.post_comments.each do |post_comment| %>
  <div class="icon mb-1 d-flex">
    <%= image_tag post_comment.end_user.get_profile_image(30, 30) %>
    <%= post_comment.comment %>
  </div>
  <div class="badge text-bg">
   <%= post_comment.end_user.name %>
   <%= post_comment.created_at.strftime('%Y/%m/%d') %>
  </div>

  <% if post_comment.end_user == current_end_user %>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote:true, data: {"turbolinks" => false} %>
  <% end %>
  <% end %>